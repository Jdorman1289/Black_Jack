MDScreen:

    size: root.width, root.height

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'poker-chips-6784532.jpg'



    MDGridLayout:
        cols: 1
        size: root.width, root.height

        MDTopAppBar:
            title: "BlackJack"
            pos_hint: {'top': 1}
            left_action_items: [['menu', lambda x: x]]
        

        MDBoxLayout:
            orientation: "horizontal"
  
            MDRaisedButton:
                text: "Deal"

                    
            MDRaisedButton:
                text: "Hit"
                disabled: True
            
            MDRaisedButton:
                text: "Stay"
                disabled: True

