WindowManager:
    GameScreen:

<GameScreen>
    name: "game_screen"
    
    MDBoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'poker-chips-6784532.jpg'


        MDTopAppBar:
            title: "BlackJack"
            pos_hint: {'top': 1}
            left_action_items: [['menu', lambda x: x]]
        

        MDBoxLayout:
            orientation: "horizontal"

            MDRaisedButton:
                id: deal_button
                text: "Deal"
                disabled: False
                on_release: root.deal_cards()

                    
            MDRaisedButton:
                id: hit_button
                text: "Hit"
                disabled: True
                on_release: root.hit()
            
            MDRaisedButton:
                id: stay_button
                text: "Stay"
                disabled: True
            

                
            Image:
                id: card_one
                allow_stretch: True
                keep_ratio: True
                size_hint: None, None
                width: 280
                height: '0dp'
                source: ""

