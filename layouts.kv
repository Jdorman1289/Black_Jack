MDScreen:

    size: root.width, root.height

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'poker-chips-6784532.jpg'



    MDGridLayout:
        cols: 1
        size: root.width, root.height

        MDTopAppBar:
            title: "BlackJack"
            pos_hint: {'top': 1}
            left_action_items: [['menu', lambda x: x]]
        

        MDGridLayout:
            cols: 2
            size: root.width - 200, root.height -200
            pos: 100, 100
            
            MDLabel:
                size_hint: None, None

            MDLabel:
                size_hint: None, None

                    
            MDCard:
                orientation: "horizontal"
                size_hint: None, None
                size: "280dp", "280dp"


            
            MDCard:
                orientation: "horizontal"
                size_hint: None, None
                size: "280dp", "280dp"

            MDGridLayout:
                cols: 3
            
                MDLabel:
                    size_hint: None, None

                MDLabel:
                    size_hint: None, None
    
                MDLabel:
                    size_hint: None, None


                
                MDRaisedButton:
                    text: "Deal"

                        
                MDRaisedButton:
                    text: "Hit"

                
                MDRaisedButton:
                    text: "Stay"

