                    size_hint: None, None
                    width: 280
                    height: '0dp'
                    source: ""
                Image:
                    id: dealer_card_six
                    allow_stretch: True
                    keep_ratio: True
                    size_hint: None, None
                    width: 280
                    height: '0dp'
                    source: ""

                       
    
        MDBoxLayout:
            orientation: "horizontal"


            MDRaisedButton:
                id: deal_button
                text: "Deal"
                disabled: False
                on_release: root.deal_cards()

                    
            MDRaisedButton:
                id: hit_button
                text: "Hit"
                disabled: True
                on_release: root.hit()
            
            MDRaisedButton:
